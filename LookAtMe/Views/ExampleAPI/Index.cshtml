@{
    ViewData["Title"] = "ExampleAPI";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript" src="~/js/main_api.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style_api.css">
</head>
<body>
    <header class="cd-main-header text-center flex flex-column flex-center">
        <h1>Little API - try it out!</h1>
        <p>Click "send" button to send request and response will show up.<br />Wanna see more? Open DevTools and see all magic in network tab!</p>
    </header>

    <section class="cd-timeline js-cd-timeline">
        <div class="container max-width-lg cd-timeline__container">
            <div class="cd-timeline__block">
                <div class="cd-timeline__img cd-timeline__img--location">
                </div> <!-- cd-timeline__img -->

                <div class="cd-timeline__content text-component">
                    <h2>GET</h2>
                    <p class="color-contrast-medium">Let's see what elements are there.<br />(You will see plain JSON response.)</p>

                    <div class="flex justify-between items-center">
                        <form id="form1" method="get" action="~/../Plants">
                            <input type="submit" class="btn btn--subtle" value="Send" />
                        </form>
                    </div>
                </div> <!-- cd-timeline__content -->
            </div> <!-- cd-timeline__block -->

            <div class="cd-timeline__block">
                <div class="cd-timeline__img cd-timeline__img--location">
                </div> <!-- cd-timeline__img -->

                <div class="cd-timeline__content text-component">
                    <h2>POST</h2>
                    <p class="color-contrast-medium">Let's add new element!</p>

                    <div class="flex justify-between items-center">
                        <a href="#0" class="btn btn--subtle">Send</a>
                    </div>
                </div> <!-- cd-timeline__content -->
            </div> <!-- cd-timeline__block -->

            <div class="cd-timeline__block">
                <div class="cd-timeline__img cd-timeline__img--location">
                </div> <!-- cd-timeline__img -->

                <div class="cd-timeline__content text-component">
                    <h2>PUT</h2>
                    <p class="color-contrast-medium">Now we can modify element.</p>

                    <div class="flex justify-between items-center">
                        <a href="#0" class="btn btn--subtle">Send</a>
                    </div>
                </div> <!-- cd-timeline__content -->
            </div> <!-- cd-timeline__block -->

            <div class="cd-timeline__block">
                <div class="cd-timeline__img cd-timeline__img--location">
                </div> <!-- cd-timeline__img -->

                <div class="cd-timeline__content text-component">
                    <h2>DELETE</h2>
                    <p class="color-contrast-medium">Keep it clean and delete element.</p>

                    <div class="flex justify-between items-center">
                        <a href="#0" class="btn btn--subtle">Send</a>
                    </div>
                </div> <!-- cd-timeline__content -->
            </div> <!-- cd-timeline__block -->

        </div>
    </section> <!-- cd-timeline -->
    <script src="~/js/main_api.js"></script>
</body>
</html>